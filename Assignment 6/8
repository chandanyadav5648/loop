//check prime or not
#include<stdio.h>
int main()
{
    int n , m , flag=0;
    printf("enter a number to check prime or not");
    scanf("%d",&n);

    m = n/2;

    for( int i=2 ; i<=m ; i++)
    {
        if(n%i==0)
        {
          printf("not a prime number");
            flag=1;
            break;
        }
     }
     if(flag==0)
         printf("prime number");

    return 0;
}
